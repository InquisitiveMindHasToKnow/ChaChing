<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemviewcardheight"
    android:layout_margin="@dimen/cardmargin"
    app:cardElevation="@dimen/cardelevation"
    app:cardCornerRadius="@dimen/cardcornerradius"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorAccent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Manhattan,"
                android:textSize="@dimen/citytextsize" />

            <TextView
                android:id="@+id/country_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/countrytextsize"
                android:layout_marginStart="12dp"
                android:text="US " />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>